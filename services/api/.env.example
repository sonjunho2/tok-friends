# --- Server ---
NODE_ENV=production
# Render 환경에선 내부 포트를 자동 할당하므로 PORT는 무시될 수 있음
PORT=4000

# --- Domains & Clients ---
# Expo 앱 번들, 웹 클라이언트, 관리자 콘솔이 사용하는 도메인
APP_BASE_URL=https://tokfriends.app
ADMIN_CONSOLE_URL=https://tokfriends-admin.vercel.app
MOBILE_BUNDLE_SCHEME=tokfriends

# --- Database (Prisma) ---
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public
DIRECT_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public

# --- Auth ---
JWT_SECRET=change-me-to-a-strong-secret
JWT_EXPIRES_IN=7d
ADMIN_JWT_SECRET=change-me-to-a-different-admin-secret
ADMIN_JWT_EXPIRES_IN=30m

# --- Session / Security ---
SESSION_COOKIE_NAME=tokfriends.sid
SESSION_COOKIE_DOMAIN=.tokfriends.app
CSRF_TRUSTED_ORIGINS=https://tokfriends-admin.vercel.app,https://tokfriends.app

# --- CORS 허용 Origin (콤마 구분, 공백 없이) ---
# 운영/관리자/개발/Expo Snack 웹플레이어 도메인 포함
CORS_ORIGIN=https://tokfriends-admin.vercel.app,https://tokfriends.app,https://www.tokfriends.app,http://localhost:3000,http://localhost:19006,https://snack.expo.dev,https://snack-web-player.s3.us-west-1.amazonaws.com

# --- Optional Integrations ---
SWAGGER_BASE_PATH=/docs
SLACK_WEBHOOK_URL=
FCM_SERVER_KEY=
SENTRY_DSN=
OPENAI_API_KEY=

# --- Prisma / Encryption ---
PRISMA_FIELD_ENCRYPTION_KEY=
